<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <package name="user" namespace="/user" extends="struts-default">
    	
        <action name="addUserAction" class="userAction" method="addUser">
            <result name="success">/user/common/success.jsp</result>
            <result name="error">/user/common/failure.jsp</result>
        </action>
        
        <action name="loginAction" class="userAction" method="login" >
        	<result name="success">/user/common/success.jsp</result>
            <result name="error">/user/common/failure.jsp</result>
        </action>
        
    </package>
</struts>
